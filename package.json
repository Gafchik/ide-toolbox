{
  "name": "test",
  "version": "1.0.0",
  "description": "IDE Toolbox — менеджер проектов и IDE для Windows.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dayjs": "^1.11.13",
    "ps-list": "^8.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.idetoolbox",
    "productName": "IDE Toolbox",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "asarUnpack": [
      "**/node_modules/sqlite3/**"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "IDE Toolbox",
      "allowElevation": true,
      "installerSidebar": "icon.png",
      "uninstallerSidebar": "icon.png",
      "include": "installer.nsh"
    }
  }
}
